{
  "manifest_version": 3,
  "name": "ADSB Exchange â†” AtlasLibre",
  "description": "AtlasLibre Plugin for ADSB Exchange",
  "version": "1.0",
  "options_ui": {
    "page": "options.html"
  },
  "icons": {
    "16": "icons/logo16.png",
    "32": "icons/logo32.png",
    "48": "icons/logo48.png",
    "128": "icons/logo128.png"
  },
  "background": {
    "service_worker": "js/background.js"
  },
  "permissions": [
    "storage",
    "scripting",
    "offscreen"
  ],
  "content_security_policy": {
    "extension_pages": "worker-src 'self'; script-src 'self' 'wasm-unsafe-eval'"
  },
  "host_permissions": ["https://globe.adsbexchange.com/*"],
  "externally_connectable": {
    "matches": [
      "https://demo.atlaslibre.com/*",
      "https://globe.atlaslibre.com/*",
      "http://localhost:5173/*"
    ]
  },
  "content_scripts": [
    {
      "matches": ["https://globe.adsbexchange.com/*"],
      "js": ["js/isolation-bridge.js"],
      "run_at": "document_start"
    },
    {
      "matches": ["https://globe.adsbexchange.com/*"],
      "js": ["js/xhrpatch.js"],
      "run_at": "document_start",
      "world": "MAIN"
    },
    {
      "matches": ["http://localhost:5173/*", "https://demo.atlaslibre.com/*", "https://globe.atlaslibre.com/*"],
      "js": ["js/plugin-discovery.js"],
      "run_at": "document_start"
    }
  ]
}
